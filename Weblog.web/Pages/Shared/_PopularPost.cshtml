@using Weblog.CoreLayer.Utilities
@model List<Weblog.CoreLayer.DTOs.Post.PostDto>

@if (Model.Any())
{
	<div class="how2 how2-cl4 flex-s-c">
		<h3 class="f1-m-2 cl3 tab01-title">
			محبوب ترین پست ها
		</h3>
	</div>

	<ul class="p-t-35">
		<li class="flex-wr-sb-s p-b-30">
			@foreach (var item in Model)
			{
				<a asp-page="Post" asp-route-slug="@item.Slug" class="size-w-10 wrap-pic-w hov1 trans-03">
					<img src="@Directories.GetPostImage(item.ImageName)" alt="IMG">
				</a>

				<div class="size-w-11">
					<h6 class="p-b-4">
						<a asp-page="Post" asp-route-slug="@item.Slug" class="f1-s-5 cl3 hov-cl10 trans-03">
							@item.Title
						</a>
					</h6>

					<span class="cl8 txt-center p-b-24">
						<a href="" class="f1-s-6 cl8 hov-cl10 trans-03">
							@item.Category.Title
						</a>

						<span class="f1-s-3 m-rl-3">
							-
						</span>

						<span class="f1-s-3">
							@item.CreationDate
						</span>
					</span>
				</div>
			}
		</li>
	</ul>
}
