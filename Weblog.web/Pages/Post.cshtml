@page "{slug}"
@using Weblog.CoreLayer.Utilities
@model Weblog.web.Pages.PostModel
@{
	ViewData["Title"] = Model.Post.Title;
}
<!-- Breadcrumb -->
<div class="container">
	<div class="headline bg0 flex-wr-sb-c p-rl-20 p-tb-8">
		<div class="f2-s-1 p-r-30 m-tb-6">
			<a asp-page="Index" class="breadcrumb-item f1-s-3 cl9">
				خانه
			</a>
		</div>
		<div class="f2-s-1 p-r-30 m-tb-6">
			<a asp-page="Category" asp-route-CategoryTitle="@Model.Post.Category.Slug" class="breadcrumb-item f1-s-3 cl9">
				@Model.Post.Category.Title
			</a>
		</div>
		@if(Model.Post.SubCategory!=null)
		{
			<div class="f2-s-1 p-r-30 m-tb-6">
				<a asp-page="Category" asp-route-CategoryTitle="@Model.Post.SubCategory.Slug" class="breadcrumb-item f1-s-3 cl9">
					@Model.Post.SubCategory.Title
				</a>
			</div>
		}
		<div class="f2-s-1 p-r-30 m-tb-6">
			<a asp-page="Index" class="breadcrumb-item f1-s-3 cl9">
				@Model.Post.Title
			</a>
		</div>

		<div class="pos-relative size-a-2 bo-1-rad-22 of-hidden bocl11 m-tb-6">
			<input class="f1-s-1 cl6 plh9 s-full p-l-25 p-r-45" type="text" name="search" placeholder="Search">
			<button class="flex-c-c size-a-1 ab-t-r fs-20 cl2 hov-cl10 trans-03">
				<i class="zmdi zmdi-search"></i>
			</button>
		</div>
	</div>
</div>

