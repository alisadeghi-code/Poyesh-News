@page
@model Weblog.web.Pages.SearchModel
@using Weblog.CoreLayer.Services.Categories
@using Weblog.CoreLayer.DTOs.Categories
@using Weblog.CoreLayer.Utilities
@inject ICategoryService _categoryservice
@{
	CategoryDto category = null;
	var search = "";
	if (!string.IsNullOrWhiteSpace(Model.PostFilter.FilterParam.CategorySlug))
	{
		category = _categoryservice.GetCategoryBy(Model.PostFilter.FilterParam.CategorySlug);
		if (category != null)
		{
			search = category.Title;
		}
	}
	else
	{
		search = Model.PostFilter.FilterParam.Title ?? "پست های مربوطه";
	}
	ViewData["Title"] = search;
}
<!-- Breadcrumb -->
<div class="container">
	<div class="headline bg0 flex-wr-sb-c p-rl-20 p-tb-8">
		<div class="f2-s-1 p-r-30 m-tb-6">
			<a asp-page="Index" class="breadcrumb-item f1-s-3 cl9">
				خانه
			</a>
		</div>
		<div class="f2-s-1 p-r-30 m-tb-6">
			<a asp-page="Search" asp-route-CategoryTitle="@search" class="breadcrumb-item f1-s-3 cl9">
				@search
			</a>
		</div>

		<div class="pos-relative size-a-2 bo-1-rad-22 of-hidden bocl11 m-tb-6">
			<input class="f1-s-1 cl6 plh9 s-full p-l-25 p-r-45" type="text" name="search" placeholder="Search">
			<button class="flex-c-c size-a-1 ab-t-r fs-20 cl2 hov-cl10 trans-03">
				<i class="zmdi zmdi-search"></i>
			</button>
		</div>
	</div>
</div>

<!-- Page heading -->
<div class="container p-t-4 p-b-40">
	@if (search != null)
	{
		<h2 class="f1-l-1 cl2">
			@search
		</h2>
	}
</div>

<!-- Latest post -->
	<section class="bg0">
		<div class="container">
    <div class="row m-rl--1">
        @if (Model.LatestPost != null && Model.LatestPost.Any())
        {
            var firstPost = Model.LatestPost.FirstOrDefault();
            <div class="col-md-6 p-rl-1 p-b-2">
                <div class="bg-img1 size-a-3 how1 pos-relative" style="background-image: url(@Directories.GetPostImage(firstPost.ImageName));">
                    <a asp-page="Post" asp-route-slug="@firstPost.Slug" class="dis-block how1-child1 trans-03"></a>

                    <div class="flex-col-e-s s-full p-rl-25 p-tb-20">
                        <a href="#" class="dis-block how1-child2 f1-s-2 cl0 bo-all-1 bocl0 hov-btn1 trans-03 p-rl-5 p-t-2">
								@if (firstPost.SubCategory != null)
								{
									@firstPost.SubCategory.Title
								}
								else
								{
									@firstPost.Category.Title
								}
							</a>

                        <h3 class="how1-child2 m-t-14 m-b-10">
                            <a asp-page="Post" asp-route-slug="@firstPost.Slug" class="how-txt1 size-a-6 f1-l-1 cl0 hov-cl10 trans-03">
                                @firstPost.Title
                            </a>
                        </h3>

                        <span class="how1-child2">
                            <span class="f1-s-4 cl11">
                                @firstPost.UserFullName
                            </span>

                            <span class="f1-s-3 cl11 m-rl-3">
                                -
                            </span>

                            <span class="f1-s-3 cl11">
                                @firstPost.CreationDate.ToShortDateString()
                            </span>
                        </span>
                    </div>
                </div>
            </div>
        }

        <div class="col-md-6 p-rl-1">
            <div class="row m-rl--1">
                @foreach (var post in Model.LatestPost.Skip(1))
                {
                    <div class="col-sm-6 p-rl-1 p-b-2">
                        <div class="bg-img1 size-a-14 how1 pos-relative" style="background-image: url(@Directories.GetPostImage(post.ImageName));">
                            <a asp-page="Post" asp-route-slug="@post.Slug" class="dis-block how1-child1 trans-03"></a>

                            <div class="flex-col-e-s s-full p-rl-25 p-tb-20">
                                <a href="#" class="dis-block how1-child2 f1-s-2 cl0 bo-all-1 bocl0 hov-btn1 trans-03 p-rl-5 p-t-2">
										@if (post.SubCategory != null)
										{
											@post.SubCategory.Title
										}
										else
										{
											@post.Category.Title
										}
                                </a>

                                <h3 class="how1-child2 m-t-14">
                                    <a asp-page="Post" asp-route-slug="@post.Slug" class="how-txt1 size-h-1 f1-m-1 cl0 hov-cl10 trans-03">
                                        @post.Title
                                    </a>
                                </h3>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

</section>




<!-- Post -->
<section class="bg0 p-t-70 p-b-55">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-10 col-lg-8 p-b-80">
				<div class="row">
					
						<!-- Item latest -->
						@foreach(var item in Model.PostFilter.Posts)
						{
						<div class="col-sm-6 p-r-25 p-r-15-sr991">
							<div class="m-b-45">
								<a asp-page="Post" asp-route-slug="@item.Slug" class="wrap-pic-w hov1 trans-03">
									<img src="@Directories.GetPostImage(item.ImageName)" alt="@item.Title">
								</a>

								<div class="p-t-16">
									<h5 class="p-b-5">
										<a asp-page="Post" asp-route-slug="@item.Slug" class="f1-m-3 cl2 hov-cl10 trans-03">
											@item.Title
										</a>
									</h5>

									<span class="cl8">
										@if (!string.IsNullOrEmpty(item.UserFullName))
										{
											<a href="#" class="f1-s-4 cl8 hov-cl10 trans-03">
												@item.UserFullName
											</a>
										}
										else
										{
											<a href="#" class="f1-s-4 cl8 hov-cl10 trans-03">
												نویسنده نامعلوم
											</a>
										}

										<span class="f1-s-3 m-rl-3">
											-
										</span>

										<span class="f1-s-3">
											@item.CreationDate.ToShortDateString()
										</span>
									</span>
								</div>
							</div>
						</div>
						}
					
				</div>
				<!-- Pagination -->
				@if(Model.PostFilter.PageCount>1)
				{
					
					<nav class="pagination">
						@for(var i = 1; i <= Model.PostFilter.PageCount; i++)
						{
							if (i == Model.PostFilter.FilterParam.PageId)
							{
								<span class="pagination__page pagination__page--current">@i</span>
							}
							else
							{
								<a href="#" onclick="ChangePage(@i)" class="pagination__page">@i</a>
							}
						}
						@if (Model.PostFilter.PageCount > Model.PostFilter.FilterParam.PageId)
						{

					         <a href="#" class="pagination__page pagination__icon  pagination__page--next" onclick="ChangePage(@(Model.PostFilter.FilterParam.PageId+1) >
								<img src="/images/icons/Next.png" class="pagination__page pagination__icon pagination__page--next" alt="Next">
							</a>
						}

					</nav>
				}
				
			</div>

			<div class="col-md-10 col-lg-4 p-b-80">
				<div class="p-l-10 p-rl-0-sr991">
					<!-- Subscribe -->
					<div class="bg10 p-rl-35 p-t-28 p-b-35 m-b-50">
						<h5 class="f1-m-5 cl0 p-b-10">
							Subscribe
						</h5>

						<p class="f1-s-1 cl0 p-b-25">
							Get all latest content delivered to your email a few times a month.
						</p>

						<form class="size-a-9 pos-relative">
							<input class="s-full f1-m-6 cl6 plh9 p-l-20 p-r-55" type="text" name="email" placeholder="Email">

							<button class="size-a-10 flex-c-c ab-t-r fs-16 cl9 hov-cl10 trans-03">
								<i class="fa fa-arrow-right"></i>
							</button>
						</form>
					</div>

					
					<!-- Popular Posts -->
					<div class="p-b-30" id="popular_post">
					</div>

					<!--  -->
					<div class="flex-c-s p-b-50">
						<a href="#">
							<img class="max-w-full" src="images/banner-02.jpg" alt="IMG">
						</a>
					</div>

					
				</div>
			</div>
		</div>
	</div>
</section>