@page
@model Weblog.web.Pages.Auth.VerifyCodeModel
@{
    Layout = "Shared/_AuthLayout";
}
<title>پویش نیوز -  تایید کد </title>

<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">تأیید کد</h2>
                <form method="post" class="register-form" id="verify-code-form">
                    <div class="form-group">
                        <label for="code"><i class="zmdi zmdi-confirmation-number"></i></label>
                        <input type="Code"asp-for="Code"  id="code" placeholder="کد تأیید را وارد کنید" required />
                        <span asp-validation-for="Code" style="color:red"></span>
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" name="verifycode" id="verifycode" class="form-submit" value="تأیید" />
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="/authstyles/images/code.gif" alt="sign up image"></figure>
            </div>
        </div>
    </div>
</section>
