@page
@model Weblog.web.Pages.Auth.ForgotModel
@{
	Layout = "Shared/_AuthLayout";
}
<title>پویش نیوز - فراموشی رمز عبور </title>
<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">فراموشی رمز عبور</h2>
                <form method="POST" class="register-form" id="forgot-password-form">
                    <div class="form-group">
                        <label for="email"><i class="zmdi zmdi-email"></i></label>
                        <input type="email" asp-for="Email" id="email" placeholder=" ایمیل خود را وارد کنید" />
                        <span asp-validation-for="Email" style="color:red"></span>
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" name="sendcode" id="sendcode" class="form-submit" value="ارسال کد" />
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="/authstyles/images/Forgot-password.gif" alt="sing up image"></figure>
            </div>
        </div>
    </div>
</section>
